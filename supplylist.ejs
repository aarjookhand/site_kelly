<!DOCTYPE html>
<html>
<head>
    <title>Supplies List</title>
    <style>
      body {
          font-family: Arial, sans-serif;
          margin: 0;
          padding: 0;
      }

      .go-back-button {
      text-align: center;
      margin-top: 20px;
    }

    .go-back-link {
      display: inline-block;
      padding: 10px 20px;
      background-color: #555;
      color: #fff;
      text-decoration: none;
      border-radius: 4px;
      font-weight: bold;
    }

    .go-back-link:hover {
      background-color: #333;
    }

    .welcome-heading {
      text-align: center;
      font-family: "Brush Script MT", "Brush Script Std", cursive;
      font-size: 36px;
      margin-top: 30px;
      margin-bottom: 20px;
      color: #000000b7;
      border: 2px solid #052703;
      padding: 10px;
      border-radius: 10px;
      box-shadow: 0px 3px 6px rgba(0, 0, 0, 0.1);
    }



      /* Container */
      .container {
          max-width: 1200px;
          margin: 0 auto;
          padding: 20px;
      }

      /* Table */
      table {
          width: 100%;
          border-collapse: collapse;
          margin-top: 20px;
      }

      th, td {
          border: 1px solid #ddd;
          padding: 8px;
          text-align: left;
      }

      th {
          background-color: #f2f2f2;
      }

      img {
          max-width: 100px;
          height: auto;
      }
       /* Forms */
       .search-form {
            display: inline-block;
            margin-right: 20px;
        }

        .submit-btn {
            padding: 8px 16px;
            background-color: #007bff;
            color: #fff;
            border: none;
            cursor: pointer;
        }

        .submit-btn:hover {
            background-color: #0056b3;
        }

        /* Header */
        h1 {
            margin-top: 0;
        }

        .go-back-button {
      text-align: center;
      margin-top: 20px;
      }

      .go-back-link {
        display: inline-block;
        padding: 10px 20px;
        background-color: #555;
        color: #fff;
        text-decoration: none;
        border-radius: 4px;
        font-weight: bold;
      }

      .go-back-link:hover {
        background-color: #333;
      }

    </style>

    
</head>

<body>
  
  <div class="container">
    <h1 class="welcome-heading">Bienvenue Ã  Fest'Event.</h1>
  <% if (event) { %>
    <h1>All Supplies</h1>
  <% } %>



  <!-- Add the search form -->
  <form class="search-form" action="/addinsupplies/<%= event.id %>" method="get">
    <label for="search">Search:</label>
    <input type="text" id="search" name="search" value="<%= searchTerm %>" placeholder="Search from place">
    <input type="submit" value="Search">
  </form>

 
  <form class="search-form" action="/addinsupplies/<%= event.id %>/refine" method="get">
    <label for="refineSearch">Refine search:</label>
    <input type="text" id="refineSearch" name="refineSearchTerm" value="<%= refineSearchTerm %>" placeholder="Refine search">
    <!-- Include the 'search' query parameter from the first search bar -->
    <input type="hidden" name="search" value="<%= searchTerm %>">
    <input type="submit" value="Refine">
  </form>

  <form action="/addinsupplies/<%= event.id %>/addSupplies" method="post">
    <table>
      <tr>
        <td>ID</td>
        <th>Name</th>
        <th>Image</th>
        <th>Description</th>
        <th>Category</th>
        <th>Sub Category</th>
        <th>Country</th>
        <th>Region</th>
        <th>City</th>
        <th>Quantity</th>
        <th>Rate</th>
        <th>Select Quantity</th>
        <th>Select Supply</th>
      </tr>
      <% supplies.forEach(supply => { %>
        <tr>
          <td><%= supply.id %></td>
          <td><%= supply.name %></td>
          <td><a href="/images">
                <img src="<%= supply.image %>" alt="<%= supply.image %>">
              </a></td>
          <td><%= supply.description %></td>
          <td><%= supply.category %></td>
          <td><%= supply.sub_category %></td>
          <td><%= supply.country %></td>
          <td><%= supply.region %></td>
          <td><%= supply.city %></td>
          <td><%= supply.quantity %></td>
          <td><%= supply.rate %></td>
          
          <td>
            <input type="number" name="quantity<%= supply.id %>" value="0" min="0">
          </td>
          <td>
            <input type="checkbsuppox" name="selectedSupplies" value="<%= supply.id %>">
          </td>
          
        </tr>
      <% }); %>
    </table>
    <input type="submit" value="Confirm Selection">
  </form>
  <div class="go-back-button">
    <a class="go-back-link" href="javascript:history.back()">Go Back</a>
  </div>
</body>
</html>
